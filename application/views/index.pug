extends layout

block header
  .jumbotron.jumbotron-fluid#page-jumbotron
    .container
      h1.display-4 Controlador Inteligente de Ar Condicionado
      p.lead.ml-3 Projeto de Iniciação Científica - Centro Universitário Senac

block air-conditioner-controller  
  .card.shadow-lg.text-center    
    .card-body      
      .row.justify-content-center.align-items-center.mt-4
        .col-md-3
          button(type="button" id="decrease-temperature").btn
            i.fas.fa-angle-left.fa-2x
        .col-md-6
          h1.display-3#temperature-display
          p.lead Temperatura Ambiente
        .col-md-3
          button(type="button" id="increase-temperature").btn
            i.fas.fa-angle-right.fa-2x
      .row.justify-content-end.mr-4.mt-2
          .btn-group.dropup
            button(type="button").btn(
              data-toggle="dropdown",
              aria-haspopup="true",
              aria-expanded="false"
            )
              i.fas.fa-cog
            .dropdown-menu.mb-2
              .container-fluid.text-center
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12                    
                    button(type="button" id="activate-proxy" style="width: 250px;").btn.btn-outline-dark Ativar Proxy
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12                    
                    button(type="button" id="deactivate-proxy" style="width: 250px;").btn.btn-outline-dark Desativar Proxy                    
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12                    
                    button(type="button" id="activate-ai" style="width: 250px;").btn.btn-outline-dark Ativar Inteligência Artificial
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12
                    button(type="button" id="deactivate-ai" style="width: 250px;").btn.btn-outline-dark Desativar Inteligência Artificial                
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12
                    button(type="button" id="reset-ai" style="width: 250px;").btn.btn-outline-dark Treinar Inteligência Artificial
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12
                    button(type="button" id="turn-on" style="width: 250px;").btn.btn-outline-dark Ligar Ar Condicionado
                .row.justify-content-center.align-items-center.mt-2.mb-2
                  .col-md-12
                    button(type="button" id="turn-off" style="width: 250px;").btn.btn-outline-dark Desligar Ar Condicionado
                
block charts
  .card.shadow-lg
    .card-body      
      nav.navbar.navbar-expand-lg.navbar-light
        .collapse.navbar-collapse
          ul.nav.navbar-nav.mr-auto(id="myTab", role="tablist")
            li.nav-item.mr-1 
              a.nav-link.active(
                id="temperature-tab", 
                href="#temperature",
                data-toggle="tab", 
                role="tab",
                aria-controls="temperature",
                aria-selected="true" 
              ) Temperatura
            li.nav-item.mr-1 
              a.nav-link(
                id="humidity-tab", 
                href="#humidity", 
                data-toggle="tab",
                role="tab",
                aria-controls="humidity",
                aria-selected="false" 
              ) Umidade
            li.nav-item.mr-1 
              a.nav-link(
                id="luminosity-tab", 
                href="#luminosity", 
                data-toggle="tab",
                role="tab",
                aria-controls="luminosity",
                aria-selected="false" 
              ) Luminosidade
            li.nav-item.mr-1 
              a.nav-link(
                id="sound-tab", 
                href="#sound", 
                data-toggle="tab",
                role="tab",
                aria-controls="humidity",
                aria-selected="false" 
              ) Intensidade do Som
      .container-fluid.mt-3.mb-2
        .tab-content(id="tabContent")
          .tab-pane.fade.show.active(id="temperature", role="tabpanel", aria-labelledby="temperature-tab")
            canvas#temperature-chart
          .tab-pane.fade(id="humidity", role="tabpanel", aria-labelledby="humidity-tab")
            canvas#humidity-chart
          .tab-pane.fade(id="luminosity", role="tabpanel", aria-labelledby="luminosity-tab")
            canvas#luminosity-chart
          .tab-pane.fade(id="sound", role="tabpanel", aria-labelledby="sound-tab")
            canvas#sound-chart
